#include<stdio.h>

//Ve hinh tam giac 1    ngc 1            nguoc 2      nguoc 3

*                       * * * *          ****         *
* *                     * * *             ***        ** 
* * *                   * *                **       ***
* * * *                 *                   *      ****

void veTamGiac(int n){
	 int i,j;
	 for(i = 0; i <= n; i++){
	 	for(j = 0; j < i; j++){   // j<n-i   la nguoc
	 		printf("* ");
		 }
	 printf("\n");
	 }
}

void veTamGiac(int n){   // nguoc2
    int i, j;
    for(i = 0; i < n; i++){             // Duyá»‡t qua tá»«ng dÃ²ng tá»« 0 Ä‘áº¿n n - 1
        for(j = 0; j < i; j++){         // In khoáº£ng tráº¯ng á»Ÿ Ä‘áº§u má»—i dÃ²ng
            printf(" ");
        }
        for(j = i; j < n; j++){         // In dáº¥u * tá»« vá»‹ trÃ­ i Ä‘áº¿n n - 1
            printf("*");
        }
        printf("\n");                  // Xuá»‘ng dÃ²ng sau má»—i dÃ²ng in ra
    }
}

ðŸ§  Giáº£i thÃ­ch logic in tá»«ng dÃ²ng (vÃ­ dá»¥ vá»›i n = 5):
DÃ²ng	Sá»‘ khoáº£ng tráº¯ng (n - i - 1)	 Sá»‘ dáº¥u * (i + 1)	Káº¿t quáº£
0	4	1	                               "  *"
1	3	2                             	"  **"
2	2	3	                             "  ***"
3	1	4	                            "  ****"
4	0	5                             	*****"
void veTamGiac(int n){                  nguoc 3  vuong cawn phai
	 int i,j;
	 for(i = 0; i < n; i++){
	 	for(j = 0; j < n - i -1; j++){    
	 		printf(" ");
		 }
		 for(j = 0; j < i + 1; j++){
			printf("*");
		 }
            printf("\n"); 	
	 }
}


int main(){
	int n;
	scanf("%d",&n);
	veTamGiac(n);
}
