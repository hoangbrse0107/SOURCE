#include<stdio.h>
#include<ctype.h>
#include<string.h>


int main(){
// ve hinh thoi
int n;
scanf("%d",&n);

int i;
for(i = 1; i <= n; i++){
	
	int j;
	for(j = 1; j <= n - i; j++){
		printf("   ");
	}
	for(j = 1; j<= 2 * i -1; j++){
		printf(" * ");
	}
	printf("\n");
}

for(i = n - 1; i >= 1; i--){
	int j;
for(j = 1; j <= n - i; j++){
	printf("   ");
}
for(j = 1; j <= 2 * i - 1; j++){
	printf(" * ");
}
printf("\n");
}
return 0;
}
